
@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<br />

@if (TempData["Msg"] != null)
 {
    <span class="alert alert-info">@TempData["Msg"]</span>
 }
<a class="btn btn-danger mb-4" href="/student/create">Create</a>
@if (Model.Count == 0)
 {
    <h3>No Data Found</h3>
 }
 else
 {
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>CGPA</th>
            <th>DEPARTMENT</th>
        </tr>
        @foreach (var item in Model)
         {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.cgpa</td>
                <td>@item.dept</td>
            </tr>
         }
    </table>
}

